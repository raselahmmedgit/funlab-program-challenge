@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron">
    <div class="row">
        <div class="col-12 pl-50px pr-50px">
            <h1>Web Calculator</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12 pl-50px pr-50px">
            <div class="web-calc-container">
                <input type="text" class="web-calc-display" />

                <div class="web-calc-buttons">
                    
                    <button class="web-calc-operator" data-value="%">%</button>
                    <button class="web-calc-operator" data-value="C">C</button>
                    <button class="web-calc-operator" data-value="DEL">DEL</button>
                    <button class="web-calc-operator" data-value="/">/</button>

                    <button data-value="7">7</button>
                    <button data-value="8">8</button>
                    <button data-value="9">9</button>
                    <button class="web-calc-operator" data-value="*">*</button>

                    <button data-value="4">4</button>
                    <button data-value="5">5</button>
                    <button data-value="6">6</button>
                    <button class="web-calc-operator" data-value="-">-</button>

                    <button data-value="1">1</button>
                    <button data-value="2">2</button>
                    <button data-value="3">3</button>
                    <button class="web-calc-operator" data-value="+">+</button>

                    <button data-value="0">0</button>
                    <button data-value="00">00</button>
                    <button data-value=".">.</button>
                    <button class="web-calc-operator" data-value="=">=</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            WebCalculator.InitWebCalculator();
        });
    </script>
}