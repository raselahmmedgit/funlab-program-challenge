@model FunlabProgramChallenge.ViewModels.LoginViewModel
@{ 
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!--Login Page-->
<div class="row mt-4">
    <div class="col-3">
    </div>
    <div class="col-6 text-center">
        <a class="btn btn-primary" href="@Url.Action("LogIn", "Account", new { Area = "" })">Sign In</a>
        <a class="btn btn-secondary" href="@Url.Action("Register", "Account", new { Area = "" })">Sign Up</a>
    </div>
    <div class="col-3">
    </div>
</div>
<div class="row mt-2">
    <div class="col-3">
    </div>
    <div class="col-6 text-center">
        <div class="">
            @* <h2 class="mb-3 font-weight-normal">Sign In</h2> *@
            <div class="mb-3">
                <div class="validation-message text-danger"></div>
            </div>
            <div class="form-group mb-3">
                <label for="UserEmail" class="control-label">Email</label>
                <input type="email" id="UserEmail" name="UserEmail" class="form-control" placeholder="Email" required autofocus>
            </div>
            <div class="form-group mb-3">
                <label for="UserPassword" class="control-label">Password</label>
                <input type="password" id="UserPassword" name="UserPassword" class="form-control" placeholder="Password" required>
            </div>
            <div class="mt-2">
                <button class="btn btn-primary btn-block" id="btnSignInSubmit">Submit</button>
            </div>
        </div>
    </div>
    <div class="col-3">
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            SignIn.InitSignIn();
        });
    </script>
}